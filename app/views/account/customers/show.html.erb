<%= render 'account/shared/page' do |p| %>
  <% p.content_for :title, t('.section') %>
  <% p.content_for :body do %>
    <%= render 'account/shared/box', divider: true do |p| %>
      <% p.content_for :title, t('.header') %>
      <% p.content_for :description do %>
        <%= t('.description') %>
        <%= t('.manage_description') if can? :manage, @customer %>
      <% end %>

      <% p.content_for :body do %>
        <% with_attribute_settings object: @customer, strategy: :label do %>
          <%= render 'shared/attributes/text', attribute: :syncroid %>
          <%= render 'shared/attributes/text', attribute: :firstname %>
          <%= render 'shared/attributes/text', attribute: :lastname %>
          <%= render 'shared/attributes/text', attribute: :businessname %>
          <%= render 'shared/attributes/text', attribute: :email %>
          <%= render 'shared/attributes/text', attribute: :phone %>
          <%= render 'shared/attributes/text', attribute: :mobile %>
          <%= render 'shared/attributes/date_and_time', attribute: :created %>
          <%= render 'shared/attributes/date_and_time', attribute: :updated %>
          <%= render 'shared/attributes/text', attribute: :pdf_url %>
          <%= render 'shared/attributes/text', attribute: :address %>
          <%= render 'shared/attributes/text', attribute: :address_2 %>
          <%= render 'shared/attributes/text', attribute: :city %>
          <%= render 'shared/attributes/text', attribute: :state %>
          <%= render 'shared/attributes/text', attribute: :zip %>
          <%= render 'shared/attributes/text', attribute: :latitude %>
          <%= render 'shared/attributes/text', attribute: :longitude %>
          <%= render 'shared/attributes/text', attribute: :notes %>
          <%= render 'shared/attributes/boolean', attribute: :get_sms %>
          <%= render 'shared/attributes/boolean', attribute: :opt_out %>
          <%= render 'shared/attributes/boolean', attribute: :disabled %>
          <%= render 'shared/attributes/boolean', attribute: :no_email %>
          <%= render 'shared/attributes/text', attribute: :business_and_full_name %>
          <%= render 'shared/attributes/text', attribute: :business_then_name %>
          <%# ðŸš… super scaffolding will insert new fields above this line. %>
        <% end %>
      <% end %>

      <% p.content_for :actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @customer], class: first_button_primary if can? :edit, @customer %>
        <%= button_to t('.buttons.destroy'), [:account, @customer], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@customer)) } if can? :destroy, @customer %>
        <%= link_to t('global.buttons.back'), [:account, @team, :customers], class: first_button_primary %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
